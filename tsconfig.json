{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "strict": true,
    "module": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": "./src",
    "allowUnreachableCode": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "checkJs": true,
    "paths": {
      "@/*": ["/*"],
      "@components/*": ["components/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
